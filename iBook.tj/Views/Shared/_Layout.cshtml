<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iBook.tj</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto&display=swap" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("admin"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">iBook.tj</a>
                        @*<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Admin" asp-action="Index">Главная</a>
                        </div>*@
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Admin" asp-action="Products">Продукция</a>
                        </div>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Admin" asp-action="Orders">Заказы</a>
                        </div>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Admin" asp-action="Users">Пользователи</a>
                        </div>
                    }
                    @if (!User.IsInRole("admin"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">iBook.tj</a>
                        @*<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </div>*@
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Home" asp-action="Products">Книги</a>
                        </div>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Home" asp-action="Cart">Корзина<span id="counter"></span></a>
                        </div>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Home" asp-action="Orders">Заказы</a>
                        </div>
                    }
                }
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">iBook.tj</a>
                    @*<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </div>*@
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Home" asp-action="Products">Книги</a>
                    </div>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Home" asp-action="Cart">Корзина</a>
                    </div>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <a class="navbar-nav text-decoration-none" asp-area="" asp-controller="Home" asp-action="Orders">Заказы</a>
                    </div>
                }
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - iBook.tj -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
